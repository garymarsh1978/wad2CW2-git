<html>
<head>
    {{>header}}
</head>
    {{^user}}
<body class="container">  
  <a id="login" href="/register" class="btn btn-primary">
    Register
  </a>
  <a id="login" href="/login" class="btn btn-primary">
    Sign in
  </a>
{{/user}}
{{#user}}
  <a id="logout" href="/logout" class="btn btn-primary">
    Sign out
  </a>
{{/user}}
    <h1>{{title}}</h1>
<div class="text-right">
<a href="/newfood" class="btn btn-primary">
   Donate new Food Item
</a>
</div>
<form method="post" role="form" action="/collect">
{{#foodEntries}}
   <div class="form-group">
    <label for="foodType">Food Type</label>
    <input type="text" readonly="readonly" class="form-control" id="foodType" value="{{foodType}}">
  </div>
   <div class="form-group">
    <label for="quantity">Quantity</label>
    <input type="text" readonly="readonly" class="form-control" id="quantity" value="{{quantity}}">
  </div>
  <div class="form-group">
    <label for="donator">Donator</label>
    <input type="text" readonly="readonly" class="form-control" id="donator" value="{{donator}}">
  </div>
  <div class="form-group">
    <label for="Harvest Date">Harvest Date</label>
    <input type="date" readonly="readonly" class="form-control" id="harvestDate" value="{{harvestDate}}">
  </div>
  <div class="form-group">
    <label for="Deposit Date">Deposit Date</label>
    <input type="date" readonly="readonly" class="form-control" id="depositDate" value="{{depositDate}}">
  </div>
   <div class="form-group"> 
  <label for="Pantry">Pantry</label>
   <input type="text" readonly="readonly" class="form-control" id="pantry" name="pantry" value="{{pantry}}">
  </div>
  <div class="form-group"> 
    <label for="Select Item">Select Item</label>
      <input type="checkbox" class="form-control" name="selectedItems" id="selectedItems" value="{{_id}}">
  </div>
  {{/foodEntries}}
    <div class="form-group">
            <input type="submit" value="Select  Food Item" class="btn btn-primary">
   </div> 
</form>
</body>
<footer>
{{>footer}}
</footer>
</html>